<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>   

        <template id="customer_report">

            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <t t-foreach="docs" t-as="o">

                        <div class="page">

                            <style>

                                .container{
                                    width: 100%;
                                    margin: 0px auto;
                                }
                                .center-container{
                                    width: 1000px;
                                    margin: 0px auto;
                                }
                                .head{
                                    width: 100%;
                                }
                                .head h3{
                                    text-align: center;
                                    margin: 0px auto;

                                }
                                .head p{
                                    text-align: center;
                                    margin: 0px auto;
                                    margin-bottom: 15px;
                                    
                                }
                                .date{
                                    width: 100%;
                                    margin: 0px auto;
                                    margin-bottom: 15px;
                                    margin-top: 50px;
                                }
                                .date p1 {
                                    width: 25%;
                                    float: left;
                                }
                                .date p2 {
                                    width: 60%;
                                    float: left;
                                    margin-bottom: 6px;
                                }
                                .date p3 {
                                    width: 15%;
                                    float: right;
                                }
                                .date p4 {
                                    width: 25%;
                                    float: left;
                                }
                                .date p5{
                                    width: 55%;
                                    float: left;
                                }
                                .date p6 {
                                    width: 15%;
                                    float: right;
                                    margin-bottom: 15px;
                                }

                                table {
                                    border: 1px solid #000;
                                    margin: 10px 0px 0px;
                                    width: 100%;
                                    float: left;
                                    border-spacing: 0px;
                                    }

                                table tr th,
                                table tr td {
                                    border-right: 1px solid #000;
                                    text-align: center;
                                }
                                table tr th {
                                    padding: 10px 0px;
                                    
                                }

                                table tr td {
                                    border-top: 1px solid #000;
                                    padding: 5px 0px;
                                }

                            </style>

                            <div class="container">

                                <div class="center-container">

                                    <div class="head">
                                        <h3>CAR ACCESSORIES</h3>
                                        <p>Sales (Customer Wise)</p>
                                    </div>

                                    <div class="date">

                                        <p1><b>Date From:</b>&#032;
                                        <span t-esc="get_form()"></span></p1>

                                        <p2><b>To:</b>&#032;
                                        <span t-esc="get_to()"></span></p2>

                                        <p3><b>Date:</b>&#032;<span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/> </p3>

                                        <p4><b>Customer From:</b>&#032;3 PIN SOCKET</p4>

                                        <p5><b>To:</b>&#032;WIPER FNL 20" (CN)</p5>

                                        <p6><b>Time:</b>&#032;<span t-esc="context_timestamp(datetime.datetime.now()).strftime('%H:%M')"/></p6>

                                    </div>

                                    <table>

                                        <tr>
                                            <th>Customer ID</th>
                                            <th>Compnay</th>
                                            <th>Amount</th>
                                        </tr>

                                        <t t-set="num" t-value="namer()" />
                                        <t t-set="t_all" t-value="0" />
                                        <t t-set="t_spec" t-value="0" />
                                        <t t-set="t_multi" t-value="0" />
                                        <t t-set="t_top" t-value="0" />

                                        <t t-if="num == 'all_cust'">

                                            <tr>

                                                <td>All Customer</td>
                                                <td>All Customer</td>
                                                <td>
                                                    <span t-esc="get_all()"></span>
                                                    <t t-set="t_all" t-value="t_all+get_all()" />
                                                </td>

                                            </tr>

                                        </t>

                                         <t t-if="num == 'spec_cust'">

                                            <tr>

                                                <td>
                                                    <span t-esc="get_id('id')"></span>
                                                </td>
                                                <td>
                                                    <span t-esc="get_name()"></span>
                                                </td>
                                                <td>
                                                    <span t-esc="get_spec()"></span>
                                                    <t t-set="t_spec" t-value="t_spec+get_spec()" />
                                                </td>

                                            </tr>

                                        </t>

                                        <t t-if="num == 'multi_cust'">

                                            <t t-foreach="multi" t-as="data">

                                                <tr>

                                                    <td>
                                                        <span t-esc="get_id(data)"></span>
                                                    </td>
                                                    <td>
                                                        <span t-esc="data"></span>
                                                    </td>
                                                    <td>
                                                        <span t-esc="get_multi(data)"></span>
                                                        <t t-set="t_multi" t-value="t_multi+get_multi(data)" />
                                                    </td>

                                                </tr>

                                            </t>

                                        </t>

                                         <t t-if="num == 'top_cust'">

                                            <t t-foreach="select" t-as="line">

                                                <tr>

                                                    <td>
                                                        <span t-esc="get_id(line)"></span>
                                                    </td>
                                                    <td>
                                                        <span t-esc="line"></span>
                                                    </td>
                                                    <td>
                                                        <span t-esc="get_top(line)"></span>
                                                        <t t-set="t_top" t-value="t_top+get_top(line)" />
                                                    </td>

                                                </tr>

                                            </t>

                                        </t>

                                        <tr>

                                            <td colspan="2"><b>Total</b></td>

                                            <t t-if="num == 'spec_cust'">

                                                <td><b>
                                                    <span t-esc="t_spec"></span>
                                                </b></td>

                                            </t>

                                            <t t-if="num == 'all_cust'">

                                                <td><b>
                                                    <span t-esc="t_all"></span>
                                                </b></td>

                                            </t>

                                            <t t-if="num == 'multi_cust'">

                                                <td><b>
                                                    <span t-esc="t_multi"></span>
                                                </b></td>

                                            </t>

                                            <t t-if="num == 'top_cust'">

                                                <td><b>
                                                    <span t-esc="t_top"></span>
                                                </b></td>

                                            </t>

                                        </tr>

                                    </table>

                                </div>

                            </div>

                        </div>

                    </t>

                </t>
            </t>

        </template>

    </data>

</openerp>