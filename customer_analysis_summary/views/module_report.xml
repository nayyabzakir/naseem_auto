<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>   

        <template id="customer_report">

            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <t t-foreach="docs" t-as="o">

                        <div class="page">

                            <style>
                                .container{
                                    width: 100%;
                                    margin: 0px auto;
                                }
                                .center-container{
                                    width: 1000px;
                                    margin: 0px auto;
                                }
                                .heading{
                                    width: 1000px;
                                    margin: 0px auto;
                                    margin-bottom: 20px;
                                }
                                .heading h3{
                                    text-align: center;
                                    margin: 0px auto;
                                }
                                .heading p{
                                    text-align: center;
                                    margin: 0px auto;
                                }
                                .account{
                                    width: 100%;
                                    float: left;
                                    margin-bottom: 15px;
                                    margin-top: 30px;

                                }

                                .account p1 {
                                    width: 13%;
                                    float: left;
                                }

                                .account p2 {
                                    width: 22%;
                                    float: left;
                                }
                                .account p3 {
                                    width: 8%;
                                    float: left;
                                }
                                .account p4 {
                                    width: 40%;
                                    float: left;
                                }
                                .account p5 {
                                    width: 5%;
                                    float: left;
                                }
                                .account p6 {
                                    width: 10%;
                                    float: left;
                                }
                                .account p7 {
                                    width: 13%;
                                    float: left;
                                }
                                .account p8 {
                                    width: 22%;
                                    float: left;
                                }
                                .account p9 {
                                    width: 8%;
                                    float: left;
                                }
                                .account p10 {
                                    width: 40%;
                                    float: left;
                                }

                                .account p11 {
                                    width: 5%;
                                    float: left;
                                }

                                .account p12 {
                                    width: 5%;
                                    float: left;
                                }

                                table, th, td{
                                    border: 1px solid;
                                    text-align: center;
                                    border-collapse: collapse;
                                    padding: 3px;
                                    margin-top: 120px;
                                    
                                }
    
                            </style>

                            <div class="container">

                                <div class="center-container">

                                    <div class="heading">
                                        <h3>CAR ACCESORIES</h3>
                                        <P> Customer Balances</P>
                                    </div>

                                    <div class="account">

                                        <P1><b>Date From:</b></P1>
                                        <p2>
                                            <span t-esc="get_form()"></span>
                                        </p2>
                                        <p3><b>Date To:</b></p3>
                                        <p4>
                                            <span t-esc="get_to()"></span>
                                        </p4>

                                        <p5><b>Date:</b></p5>
                                        <p6><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"></span></p6>

                                        <p7><b>Customer From:</b></p7>
                                        <p8>AFG-QADIR</p8>
                                        <p9><b>To:</b></p9>
                                        <p10>UNKNOWN</p10>
                                        <p11><b>Time:</b></p11>

                                        <p12><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%H:%M')"></span></p12>

                                    </div>
                                    
                                    <table width="100%">

                                        <tr>
                                            <th>Serial No.</th>
                                            <th>Customer ID.</th>
                                            <th>Company</th>
                                            <th>Opening Balance </th>
                                            <th>Sales</th>
                                            <th>Receipt</th>
                                            <th>Adjustment</th>
                                            <th>Closing Balance</th>
                                        
                                        </tr>

                                        <t t-set="i" t-value="1"/>
                                        <t t-set="close" t-value="0"/>
                                        <t t-set="open_t" t-value="0"/>
                                        <t t-set="sale_t" t-value="0"/>
                                        <t t-set="rece_t" t-value="0"/>
                                        <t t-set="close_t" t-value="0"/>
                                        <t t-foreach="records" t-as="data">

                                            <tr>
                                                <td>
                                                    <span t-esc="i"></span>
                                                    <t t-set="i" t-value="i+1"/>
                                                </td>
                                                <td>
                                                    <span t-esc="data.id"></span>
                                                </td>
                                                <td>
                                                    <span t-esc="data.name"></span>
                                                </td>
                                                <td>
                                                    <span t-esc="get_open(data.id)"></span>
                                                    <t t-set="open_t" t-value="open_t+get_open(data.id)"/>
                                                </td>
                                                <td>
                                                    <span t-esc="get_sale(data.id)"></span>
                                                    <t t-set="sale_t" t-value="sale_t+get_sale(data.id)"/>
                                                </td>
                                                <td>
                                                    <span t-esc="get_receipt(data.id)"></span>
                                                    <t t-set="rece_t" t-value="rece_t+get_receipt(data.id)"/>
                                                </td>
                                                <td>0.00</td>
                                                <td>
                                                    <t t-set="close" t-value="get_open(data.id)+get_sale(data.id)-get_receipt(data.id)"/>
                                                    <span t-esc="close"></span>
                                                    <t t-set="close_t" t-value="close_t+close"/>
                                                </td>
                                                
                                            </tr>
                                        </t>

                                        <tr>
                                            <th colspan="3">Total</th>
                                            <th>
                                                <span t-esc="open_t"></span>
                                            </th>
                                            <th>
                                                 <span t-esc="sale_t"></span>
                                            </th>
                                            <th>
                                                <span t-esc="rece_t"></span>
                                            </th>
                                            <th>0.00</th>
                                            <th>
                                                <span t-esc="close_t"></span>
                                            </th>
                                        
                                        </tr>
                                    </table>

                                </div>
    
                            </div>  

                        </div>

                    </t>

                </t>
            </t>

        </template>

    </data>

</openerp>